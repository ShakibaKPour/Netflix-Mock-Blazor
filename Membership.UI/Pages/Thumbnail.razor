<div class="d-flex flex-column">
    <div class="img-thumbnail" style="background-image:url('@Model.ImageUrl');">
        <img src="@Model.ImageUrl" />
    </div>
    <h1 class="mt-2">@Model.Title</h1>
    <h4>@Model.Description</h4>
    <h4>Director: @Model?.Director?.Name</h4>
    <h4>@string.Join(", ", Model?.Genres?.Select(g => g.Name).ToList() ?? new())</h4>
    <a href="@Model?.FilmUrl">Go to the film</a>

    @*@if (Model is not null)
    {
        <Video Model="Model" />
    }*@
</div>



@code {
    [Parameter] public FilmDTO Model { get; set; } = new();
    [Parameter] public DirectorDTO Director { get; set; } = new();
    public List<FilmGenreDTO> Genres { get; set; } = new();
    public List<SimilarFilmDTO> Similars { get; set; } = new();
    string genres = string.Empty;
}
